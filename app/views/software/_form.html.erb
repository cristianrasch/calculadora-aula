<%= form.hidden_field :target  %>
<%= form.hidden_field :mask  %>

<p>
  <%= form.label :free_soft_only, Software.human_attribute_name('free_soft_only').humanize %><br>
  <%= form.radio_button :free_soft_only, 1, :checked => @software.free_soft_only %>&nbsp;<%= t 'msgs.yes_txt' %>&nbsp;
	<%= form.radio_button :free_soft_only, 0, :checked => ! @software.free_soft_only %>&nbsp;<%= t 'msgs.no_txt' %>
</p>

<% @software.price_cols.each do |col| %>
<div>
  <p>
		<%= form.label col, Software.human_attribute_name(col).humanize %><br>
	  <%= form.text_field col %>
  </p>
	<%= curr_opts_for soft, col %>
	<p class="desc hidden">
    <%= form.text_area "#{col}_desc", :rows => Conf.ui['tas_row_count'], 
                       :cols => Conf.ui['tas_col_count'] %>
  </p>
</div>
<% end %>

<p>
  <%= form.submit t('msgs.save') %>
</p>