<h1><%= t 'msgs.actions' %></h1>
<ul>
	<li><%= link_to t('msgs.new'), new_budget_path %></li>
	
	<% if controller.action_name == 'show' %>
    <li><%= link_to t('msgs.pdf_version'), 
											budget_path(@budget, :format => 'pdf') %></li>
		<li><%= link_to t('msgs.edit'), edit_budget_path(@budget) %></li>
		<li><%= link_to t('msgs.delete'), @budget, :method => :delete, 
                    :confirm => t('msgs.confirmation') %></li>
		<li><%= link_to t('msgs.access_summary'), 
										summarize_budget_path(@budget) %></li>								
	<% end %>
	
	<% unless request.path == root_path %>
	 <li><%= link_to t('msgs.back'), :back %></li>
	<% end %>
</ul>