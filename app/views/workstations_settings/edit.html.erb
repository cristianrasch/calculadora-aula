<% content_for :page_title do %>
  <%= h(@workstations_settings.budget.name).humanize %>
  &nbsp;::&nbsp;
  <%= target_desc(@workstations_settings.target).humanize %>
<% end %>
<% content_for :sidenav, render(:partial => 'sidenav') %>

<% unless @workstations_settings.errors.empty? %>
  <div class="error">
	  <%= error_messages_for :workstations_settings, :header_message => nil %>
  </div>
<% end %>
<%= form_for :workstations_settings,
             :url => budget_workstations_settings_path(@workstations_settings.budget, @workstations_settings),
             :html => {:method => :put} do |f| %>
  <%= render :partial => f, :locals => {:ws => @workstations_settings} %>
<% end %>